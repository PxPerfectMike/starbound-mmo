{
  "gui": {
    "background": {
      "type": "background",
      "fileHeader": "/interface/mmo/header.png",
      "fileBody": "/interface/mmo/body.png",
      "fileFooter": "/interface/mmo/footer.png"
    },
    "windowtitle": {
      "type": "title",
      "title": "Global Market",
      "subtitle": "Buy and sell items across the galaxy",
      "icon": {
        "type": "image",
        "file": "/interface/mmo/market/icon.png"
      }
    },
    "close": {
      "type": "button",
      "base": "/interface/x.png",
      "hover": "/interface/xhover.png",
      "pressed": "/interface/xpress.png",
      "pressedOffset": [0, 0],
      "position": [321, 252]
    },

    "tabGroup": {
      "type": "radioGroup",
      "toggleMode": false,
      "position": [6, 220],
      "buttons": [
        {
          "id": 0,
          "baseImage": "/interface/mmo/tabs/browse.png",
          "hoverImage": "/interface/mmo/tabs/browsehover.png",
          "baseImageChecked": "/interface/mmo/tabs/browseselected.png",
          "hoverImageChecked": "/interface/mmo/tabs/browseselected.png",
          "pressedOffset": [0, 0],
          "position": [0, 0],
          "selected": true
        },
        {
          "id": 1,
          "baseImage": "/interface/mmo/tabs/sell.png",
          "hoverImage": "/interface/mmo/tabs/sellhover.png",
          "baseImageChecked": "/interface/mmo/tabs/sellselected.png",
          "hoverImageChecked": "/interface/mmo/tabs/sellselected.png",
          "pressedOffset": [0, 0],
          "position": [50, 0]
        },
        {
          "id": 2,
          "baseImage": "/interface/mmo/tabs/mylistings.png",
          "hoverImage": "/interface/mmo/tabs/mylistingshover.png",
          "baseImageChecked": "/interface/mmo/tabs/mylistingsselected.png",
          "hoverImageChecked": "/interface/mmo/tabs/mylistingsselected.png",
          "pressedOffset": [0, 0],
          "position": [100, 0]
        },
        {
          "id": 3,
          "baseImage": "/interface/mmo/tabs/pending.png",
          "hoverImage": "/interface/mmo/tabs/pendinghover.png",
          "baseImageChecked": "/interface/mmo/tabs/pendingselected.png",
          "hoverImageChecked": "/interface/mmo/tabs/pendingselected.png",
          "pressedOffset": [0, 0],
          "position": [150, 0]
        }
      ]
    },

    "currencyLabel": {
      "type": "label",
      "position": [250, 232],
      "hAnchor": "right",
      "value": "Balance: ^orange;0 CR^reset;"
    },

    "searchBox": {
      "type": "textbox",
      "position": [10, 200],
      "textAlign": "left",
      "maxWidth": 150,
      "hint": "Search items...",
      "callback": "onSearch"
    },

    "listingsScrollArea": {
      "type": "scrollArea",
      "rect": [5, 25, 330, 195],
      "children": {
        "listingsList": {
          "type": "list",
          "schema": {
            "selectedBG": "/interface/mmo/listitem_selected.png",
            "unselectedBG": "/interface/mmo/listitem.png",
            "spacing": [0, 1],
            "memberSize": [320, 40],
            "listTemplate": {
              "background": {
                "type": "image",
                "file": "/interface/mmo/listitem.png",
                "position": [0, 0]
              },
              "itemIcon": {
                "type": "itemslot",
                "position": [2, 2],
                "callback": "null"
              },
              "itemName": {
                "type": "label",
                "position": [42, 28],
                "hAnchor": "left",
                "value": "Item Name"
              },
              "itemCount": {
                "type": "label",
                "position": [42, 16],
                "hAnchor": "left",
                "value": "x1"
              },
              "price": {
                "type": "label",
                "position": [200, 28],
                "hAnchor": "left",
                "value": "^orange;0 CR^reset;"
              },
              "seller": {
                "type": "label",
                "position": [200, 16],
                "hAnchor": "left",
                "value": "Seller"
              },
              "buyButton": {
                "type": "button",
                "base": "/interface/mmo/buttons/buy.png",
                "hover": "/interface/mmo/buttons/buyhover.png",
                "position": [280, 10],
                "callback": "onBuy"
              }
            }
          }
        }
      }
    },

    "statusLabel": {
      "type": "label",
      "position": [170, 8],
      "hAnchor": "mid",
      "value": "Loading..."
    }
  },

  "scripts": ["/interface/mmo/market/marketui.lua"],
  "scriptWidgetCallbacks": ["onSearch", "onBuy", "onCancel", "onClaim", "onCreateListing"],
  "scriptDelta": 10
}
